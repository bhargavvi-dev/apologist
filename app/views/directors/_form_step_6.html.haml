= form_for(@director, :url => director_path(@director), :method => "PUT") do |f|
  = hidden_field_tag 'step', @step
  = hidden_field_tag 'type', "user"
  %table.tableForm{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tbody
      %tr
        %td#stepBtnHeight.leftCol{:width => "80%"}
          .formBox.view-details
            .formHeader.clearfix
              %h1
                - if !@director.registered?
                  = t("director.register")
                  %span= t("form.director.form_step_6")
                -else
                  = @director.name
                  %span= t("form.director.form_step_6_without_number")
            = render :partial => "shared/user_registration/summary_open_card", :locals => {:object => @director, :open_card => false}
        %td.stepBtnGroup{:width => "20%"}
          - back_btn_href = params[:open_card] == "true" ? director_path(@director.id) : edit_director_path(@director, :step => (@step.to_i - 1))
          %a.h40.stepBtn.backBtn{:href => back_btn_href}
            %span
              =t("form_action_button.return_button")
            = image_tag "remax_back_btn.png", :class => "mt15"
          = link_to send_pdf_path(@director.id, format: 'pdf'), class: "h15 stepBtn nextBtn" do
            %span
              = t("form_action_button.print_member_profile_pdf")
            = image_tag "remax_print_profile.png", :class => "mt15"
          %button.h15.stepBtn.nextBtn{"data-target" => "#remaxLoginInfoEmailModal", "data-toggle" => "modal", :type => "button"}
            %span
              =t("form_action_button.send_login_info_by_email")
            = image_tag "remax_email_btn.png", :class => "mt15"
          = link_to "javascript:void(0)", class: "h15 stepBtn nextBtn" do
            %span
              = t("form_action_button.move_director_info_to_brand_website", brand_name: @director.brand.name)
            = image_tag "remax_move.png", :class => "mt15"
          - unless params[:open_card] == "true"
            %button.h15.stepBtn.nextBtn{:name => "proceed_next", :type => "submit"}
              %span
                = @director.registered? ? t("form_action_button.save_director_registration") : t("form_action_button.finish_director_registration")
              = image_tag "remax_save_and_next_btn.png", :class => "mt15"