.remaxEmail
  .formField
    .row
      .col-xs-12
        = form_for(object, url: send_invitation_approval_emails_path , :html => {:id => "send_invitation_approval_form_email", :method => "post"}) do |f|
          = f.hidden_field :id, value: @event.id
          %table.tableForm{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
            %tbody
              %tr
                %td#stepBtnModalHeight.leftCol{:width => "80%"}
                  .formBox
                    .row
                      .col-xs-12
                        .form-group
                          #input_partner_recipient
                            %p
                              %label
                                =t("referral_event.send_offer_request.recipient")
                              = text_field_tag "recipient_email[]",'', :class => "form-control form-group", :id => "send_approval_input_recipient_email"
                      .col-xs-12
                        .form-group
                          %label
                            %a.addLink{:href => "javascript:void(0);", :id => "add_recipient_for_partner"}
                              %i.addIcon
                              =t("referral_event.send_offer_request.add_recipient")
                      .col-xs-12
                        .form-group
                          %label
                            =t("referral_event.send_offer_request.subject")
                          = text_field_tag :subject, '',:class => "form-control", :placeholder => t("referral_event.send_invitation_for_target_group.write_subject_here"), :id => "send_approval_input_subject"
                      .col-xs-12
                        .form-group
                          %label
                            =t("referral_event.send_offer_request.message")
                          - if @current_brand.logo.present?
                            - logo_url = absolute_url(@current_brand.logo.url, @current_brand)
                          - else
                            - logo_url = ''
                          - user = @event.user
                          - message = t("referral_event.send_offer_request.text_area_message", name: user.name, email: user.email, phone_number: user.phone_number, role: user.role.humanize, :footer_logo_url => logo_url).html_safe
                          = text_area_tag :message, message, :rows => 16, :class => "form-control ckeditorCustom", :id => "send_approval_input_message"
                      .col-xs-12
                        %label= t('general.attachments')
                      .col-xs-12
                        .form-group
                          = link_to t("referral_event.send_offer_request.invitation_template"),print_invitation_template_pdf_index_path(@event.id, :format => "pdf"), class: "h15 stepBtn nextBtn"                          
                %td.stepBtnGroup{:width => "20%"}
                  %button.h25.backBtn.stepBtn{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                    %span
                      =t("form_action_button.return_button")
                    = image_tag "back_btn.png", :class => "mt15"                      
                  %button.h75.stepBtn.nextBtn#saveMediaNext{:name => "next", :type => "submit"}
                    %span
                      =t("form_action_button.send_message")
                    = image_tag "brand_email_btn.png", :class => "mt15"