.remaxEmail
  .formField
    .row
      .col-xs-12
        = form_for(object, url: send_invitation_target_group_emails_path , :html => {:class => "", :method => "post", :id => "send_invitation_target_group_form_email"}) do |f|
          = f.hidden_field :id, value: @event.id
          %table.tableForm{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
            %tbody
              %tr
                %td#stepBtnModalHeight.leftCol{:width => "80%"}
                  .formBox
                    .row
                      .col-xs-12
                        .form-group
                          #input_partner_recipient
                            %p
                              %label
                                =t("referral_event.send_offer_request.recipient")
                              - event_name = @event.event_name.present? ? @event.event_name.gsub(' ', '_') : ""
                              = text_field_tag "recipient_email[]", t("referral_event.send_invitation_for_target_group.call_list", count: @event.event_speaker_members.count, event_name: event_name, event_date: @event.event_date.to_datetime.to_s(:default_date)), :class => "form-control form-group", :id => "send_target_group_recipient_email"
                      .col-xs-12
                        .form-group
                          %label
                            =t("referral_event.send_offer_request.subject")
                          = text_field_tag :subject, '',:class => "form-control", :placeholder => t("referral_event.send_invitation_for_target_group.write_subject_here"), :id => "send_target_group_subject"
                      .col-xs-12
                        .form-group
                          %label
                            =t("referral_event.send_offer_request.message")
                          - if @current_brand.logo.present?
                            - logo_url = absolute_url(@current_brand.logo.url, @current_brand)
                          - else
                            - logo_url = ''
                          - place = @event.partner_place.present? ? @event.partner_place.address : ''
                          - city = @event.partner_place.present? ? @event.partner_place.city : ''
                          / - event_confirm_url = event_confirm_desktop_index_url(:token => @event.token)
                          - yes_register = t("referral_event.send_invitation_for_target_group.yes_register")
                          - still_consider = t("referral_event.send_invitation_for_target_group.still_consider")
                          - sorry_cant = t("referral_event.send_invitation_for_target_group.sorry_cant")
                          / - link_body = "<a href='#{event_confirm_url}&status=ACCEPT'>#{yes_register}</a> <a href='#{event_confirm_url}&status=PENDING'>#{still_consider}</a> <a href='#{event_confirm_url}&status=REJECT'>#{sorry_cant}</a>"
                          - event_start_time = @event.event_start_time.present? ? @event.event_start_time.to_datetime.to_s(:default_time) : ""
                          - event_end_time =  @event.event_end_time.present? ? @event.event_end_time.to_datetime.to_s(:default_time) : ""
                          - sub_topic = @event.sub_topic.present? ? ": #{@event.sub_topic}" : ""
                          - caller = @event.confirm_caller ? @event.user : (@event.caller ? @event.caller : nil)
                          - if caller.present?
                            - event_caller = caller
                            - event_caller_name = event_caller.name
                            - event_caller_email = event_caller.email
                            - event_caller_phone_number = event_caller.phone_number
                            - event_caller_job_title = event_caller.job_role
                            / - event_caller_organization = event_caller.organization
                          - else
                            - event_caller = event_caller_name = event_caller_email = event_caller_phone_number =  event_caller_job_title = event_caller_organization = ''
                          - message = t("referral_event.send_invitation_for_target_group.text_area_message", event_main_topic: @event.main_topic, event_sub_topic: sub_topic, event_date: @event.event_date.to_datetime.to_s(:default_date), event_start_time: event_start_time, event_end_time: event_end_time, place: place, city: city, link_body: "", name: event_caller_name, email: event_caller_email, phone_number: event_caller_phone_number, job_title: event_caller_job_title, organization: event_caller_organization, :footer_logo_url => logo_url).html_safe
                          = hidden_field_tag 'old_message', message
                          = text_area_tag :message, message, :rows => 16, :class => "form-control ckeditorCustom", :id => "send_target_group_message"
                      .col-xs-12
                        %label= t('general.attachments')
                      .col-xs-12
                        .form-group
                          = link_to t("referral_event.invitation_template"),print_invitation_template_pdf_index_path(@event.id, :format => "pdf"), class: "h15 stepBtn nextBtn"
                %td.stepBtnGroup{:width => "20%"}
                  %button.h25.backBtn.stepBtn{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                    %span
                      =t("form_action_button.return_button")
                    = image_tag "back_btn.png", :class => "mt15"
                  %button.h75.stepBtn.nextBtn#saveMediaNext{:name => "next", :type => "submit"}
                    %span
                      =t("form_action_button.send_message")
                    = image_tag "brand_email_btn.png", :class => "mt15"