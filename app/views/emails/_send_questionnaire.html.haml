.remaxEmail
  .formField
    .row
      .col-xs-12
        = form_for(object, url: send_query_to_participants_emails_path , :html => {:class => "", :method => "post"}) do |f|
          = f.hidden_field :id, value: @event.id
          %table.tableForm{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
            %tbody
              %tr
                %td#stepBtnModalHeight.leftCol{:width => "80%"}
                  .formBox
                    .row
                      .col-xs-12
                        .form-group
                          #input_partner_recipient
                            %p
                              %label
                                =t("referral_event.send_offer_request.recipient")
                              = text_field_tag "recipient_email[]", t("referral_event.send_questionnaire_to_participant.participant_list", count: @event.event_speaker_members.participant_list.count, event_name: @event.event_name.gsub(' ', '_'), event_date: @event.event_date.strftime("%d.%m.%Y")), :class => "form-control form-group", :id => "input_recipient_email",:readonly =>true
                      .col-xs-12
                        .form-group
                          %label
                            =t("referral_event.send_offer_request.subject")
                          = text_field_tag :subject, @event.subject_of_survey, :class => "form-control"
                      .col-xs-12
                        .form-group
                          %label
                            =t("referral_event.send_offer_request.message")
                          - if @current_brand.logo.present?
                            - logo_url = absolute_url(@current_brand.logo.url, @current_brand)
                          - else
                            - logo_url = ''
                          - event_feedback_url = event_feedback_executives_url(:token => @event.token)
                          - feedback = t("referral_event.send_questionnaire_to_participant.feedback")
                          - link_body = "<a href='#{event_feedback_url}'>#{feedback}</a>"
                          - caller = @event.confirm_caller ? @event.user : (@event.caller ? @event.caller : nil)
                          - if caller.present?
                            - event_caller = caller
                            - event_caller_name = event_caller.name
                            - event_caller_email = event_caller.email
                            - event_caller_phone_number = event_caller.phone_number
                            - event_caller_job_title = event_caller.job_role
                            / - event_caller_organization = event_caller.organization
                            - event_caller_organization = ""
                          - else
                            - event_caller = event_caller_name = event_caller_email = event_caller_phone_number =  event_caller_job_title = event_caller_organization = ''
                          - response_time = @event.set_response_time.present? ? @event.set_response_time.days : "0"
                          / - response_date = response_time.present? ? (Date.today+response_time).to_datetime.to_s(:default_date) : ""
                          - message = t("referral_event.send_questionnaire_to_participant.text_area_message", link_body: link_body, name: event_caller_name, email: event_caller_email, phone_number: event_caller_phone_number, job_title: event_caller_job_title, organization: event_caller_organization, :footer_logo_url => logo_url,:response_date => "")
                          = hidden_field_tag 'old_message', message
                          = text_area_tag :message, message, :rows => 16, :class => "form-control ckeditorCustom"

                %td.stepBtnGroup{:width => "20%"}
                  %button.h25.backBtn.stepBtn{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                    %span
                      =t("form_action_button.return_button")
                    = image_tag "back_btn.png", :class => "mt15"
                  %button.h75.stepBtn.nextBtn#sendQuestionnaireBtn{:name => "next", :type => "submit"}
                    %span
                      =t("form_action_button.send_message")
                    = image_tag "brand_email_btn.png", :class => "mt15"