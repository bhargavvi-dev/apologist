.row.row10
  .col-xs-12
    .form-group.formTitle                    
      = t("form.executive.basic_information")
  .col-xs-12.col-md-6
    .card-row
      %label.label-view
        %span
          = t('executive.name')
      %label.label-value
        = object.name
    .card-row  
      %label.label-view
        %span
          = t('executive.address')
      %label.label-value
        = object.address
    .card-row  
      %label.label-view
        %span
          = t('executive.date_of_birth')
      %label.label-value
        = object.birthdate.to_datetime.to_s(:default_date) if object.birthdate.present?
    .card-row  
      %label.label-view
        %span
          = t('executive.contract_starting_date')
      %label.label-value
        = object.contract_start_date.to_datetime.to_s(:default_date) if object.contract_start_date.present?
  .col-xs-12.visible-xs.visible-sm.form-group
  .col-xs-12.col-md-6
    .card-row
      %label.label-view
        %span
          = t('executive.phone_number')
      %label.label-value
        = object.phone_number
    .card-row
      %label.label-view
        %span
          = t('executive.email')
      %label.label-value
        = object.email
    .card-row
      %label.label-view
        %span
          = t('executive.job_role')
      %label.label-value
        = object.job_role
    .card-row
      %label.label-view
        %span
          = t('executive.other_degrees')
      %label.label-value
        = object.other_business_degrees
.row.row10
  .col-xs-12
    .hr.hr25
  .col-xs-12
    .form-group.formTitle
      =t("executive.social_media_profile")
  .col-xs-12.col-md-6
    .card-row
      %label.label-view
        = image_tag "linkedin.png"
      %label.label-value
        %a{:href => "javascript:void(0);"}
          = object.linkedin_url
    .card-row
      %label.label-view
        = image_tag "youtube.png"
      %label.label-value
        %a{:href => "javascript:void(0);"}
          = object.youtube_url
  .col-xs-12.col-md-6
    .card-row
      %label.label-view
        = image_tag "facebook.png"
      %label.label-value
        %a{:href => "javascript:void(0);"}
          = object.facebook_url
    .card-row
      %label.label-view
        = image_tag "skype.png"
      %label.label-value
        %a{:href => "javascript:void(0);"}
          = object.skype_id
  .col-xs-12.col-md-6.col-lg-12.center
    .form-group.row
      .col-xs-12.pt10
        = image_tag object.avatar if object.avatar.attached?
    - if object.introduction.present?
      .row
        %label.col-xs-12.intro-text
          = object.introduction