%nav.navbar.navbar-default
  .container
    .navbar-header
      - if current_user
        %button.navbar-toggle{:type => "button","data-target" => ".navbar-collapse", "data-toggle" => "collapse"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = render "layouts/nav_header"
        .navbar-collapse
          .menuBox
            .row
              .col-xs-12.col-sm-4.col-md-3
                %a.toolBox{:href => root_path}
                  .toolImage
                    = image_tag "remax_start_screen.png"
                  .toolTitle
                    = t("toogle_header.start_screen").html_safe
              - unless current_user.customer? or current_user.inspector? 
                = render "layouts/user_shared/#{current_user.role.downcase}_header"
              .col-xs-12.col-sm-4.col-md-3
                %a.toolBox{:href => destroy_user_session_path, "data-method" => "delete"}
                  .toolImage
                    = image_tag "remax_end_session.png"
                  .toolTitle
                    = t("toogle_header.end_session").html_safe
          .menuOverlay
      .pull-right
        %a.btn{:type => "button",:href => destroy_user_session_path, "data-method" => "delete"}
          = image_tag "remax_end_session.png", :width => "30"
          .text-center.f17
            =t('toogle_header.sign_out')
      .pull-right
        %a.btn{:type => "button",:href => "javascript:void(0);"}
          = image_tag "remax_end_session.png", :width => "30"
          .text-center.f17
            =t('toogle_header.calendar')
      .pull-right
        %a.btn{:type => "button",:href => "javascript:void(0);"}
          = image_tag "remax_end_session.png", :width => "30"
          .text-center.f17
            =t('toogle_header.biller')
      .pull-right
        %a.btn{:type => "button",:href => "javascript:void(0);"}
          = image_tag "remax_end_session.png", :width => "30"
          .text-center.f17
            =t('toogle_header.inspector')