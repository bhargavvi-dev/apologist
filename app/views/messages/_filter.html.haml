.filterTop
  .row.row10
    = form_for '', :url => filter_messages_path, :method => 'post', :html => {:id => "filterFormId"}, :remote => true do
      = hidden_field_tag 'role', current_user.role
      .col-xs-12
        = text_field_tag :search, session[:message_search], :class => "form-control", placeholder: t("general.search_subject_or_sender_name")
    %div{id: 'loader-image', class: 'loader'}
      = image_tag 'loader-small.gif'