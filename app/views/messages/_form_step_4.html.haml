%table.tableForm{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
  %tbody
    %tr
      %td#stepBtnHeight.leftCol{:width => "85%"}
        .formBox
          .formHeader.clearfix
            %h1
              = t("message.message_sent")
        .formBox.minHForm
          .row
            .col-xs-12
              .form-group.center
                %label.subTitleBlue
                  =t("message.message_successfully_sent")
      %td.stepBtnGroup{:width => "15%"}
        - back_path = current_user.customer? ? desktop_customers_path : center_messages_path
        %a.h50.stepBtn.backBtn{:href => back_path}
          %span
            =t("form_action_button.go_back_to_message_center")
          = image_tag "remax_back_btn.png", :class => "mt15" 
        %a.h50.stepBtn.nextBtn{:href => root_url}
          %span
            =t("form_action_button.go_to_start_screen")
          = image_tag "remax_save_and_next_btn.png", :class => "mt15"  