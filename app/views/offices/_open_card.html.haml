.row.row10
  .col-xs-12.col-md-6
    .form-group.formTitle
      =t("office.office_information")
    .card-row
      %label.label-view
        %span
          = t('office.office_name')
      %label.label-value
        = object.office_name
    .card-row
      %label.label-view
        %span
          = t('office.company')
      %label.label-value
        = object.company_name
    .card-row
      %label.label-view
        %span
          = t('office.address')
      %label.label-value
        = object.address
    .card-row
      %label.label-view
        %span
          = t('office.address_specification')
      %label.label-value
        = object.address_specification
    .card-row
      %label.label-view
        %span
          = t('office.company_id')
      %label.label-value
        = object.company_id
    .card-row
      %label.label-view
        %span
          = t('office.brand_provided_id', brand_name: object.brand.name)
      %label.label-value
        = object.brand_provided_id
    .card-row
      %label.label-view
        %span
          = t('office.profile_brand_types', brand_name: object.brand.name)
      %label.label-value
        = object.profile_brand_types.to_s.split(',').map{|profile_brand_type| I18n.t("activerecord.attributes.profile_brand_types.#{profile_brand_type.downcase}")}.join(',')
    .card-row
      %label.label-view
        %span
          = t('office.phone_number')
      %label.label-value
        = object.phone_number
    .card-row
      %label.label-view
        %span
          = t('office.email')
      %label.label-value
        = object.email
    .card-row
      %label.label-view
        %span
          = t('office.website')
      %label.label-value
        = object.website    
  .col-xs-12.col-md-6
    .form-group.fb18blue
      =t("office.payment_info_and_admin")
    .card-row
      %label.label-view
        %span
          = t('office.bank_name')
      %label.label-value
        = object.reward_bank_accounts.first.try(:bank_name)
    .card-row
      %label.label-view
        %span
          = t('office.account_number')
      %label.label-value
        = object.reward_bank_accounts.first.try(:account_number)
    .card-row
      %label.label-view
        %span
          = t('office.bank_name')
      %label.label-value
        = object.customer_fund_bank_accounts.first.try(:bank_name)
    .card-row
      %label.label-view
        %span
          = t('office.account_number')
      %label.label-value
        = object.customer_fund_bank_accounts.first.try(:account_number)
.row.row10
  .col-xs-12
    .hr.hr25
  .col-xs-12.col-md-6.text-center
    .form-group
      - if object.logo_text.present?
        - logo_resource = object.resources["IMAGE::OFFICE_TEXT_LOGO"]
        - if logo_resource.present?
          = image_tag logo_resource.media.url(:medium), :width => "150"
        - else
          = image_tag @current_brand.logo.url, :width => "150"
  .col-xs-12.col-md-6.text-center
    .form-group
      %label.fb18blue
        = t('office.presentation_text')
      %div
        = object.presentation_text

