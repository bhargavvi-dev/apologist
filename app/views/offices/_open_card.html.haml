    .hr.hr25
  .col-xs-12.col-md-3
    .form-group.medium.f20
      = t('office.office_logo')
    .form-group.text-center
      / - if object.logo_text.present?
      /   - logo_resource = object.resources["IMAGE::OFFICE_TEXT_LOGO"]
      /   - if logo_resource.present?
      /     = image_tag logo_resource.media.url(:medium), :width => "150"
      /   - else
      /     = image_tag @current_brand.logo.url, :width => "150"
      = image_tag "logo.png", :width => "180"
  .col-xs-12.col-md-9
    .form-group.medium.f20
      = t('office.presentation_text')
      %div.pt10
        = object.presentation_text
        = text_field_tag :presentation_text, object.presentation_text, :class => "form-control"

