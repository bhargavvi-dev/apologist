  #bank_account_details
    - setting = @current_brand.setting("REMAX_BANK_DETAILS")
    - bank_details_hash = eval(setting.setting_value) if setting.setting_value.present?
    - if bank_details_hash.present? 
      - bank_details_hash.each_with_index do |(bank_key,bank_value),idx|
        - idx += 1
        .added_bank_account{:id => "added_bank_account_wrapper_#{idx}"}
          .fieldRemove
            .row.row7
              .col-xs-12.col-sm-6.form-group
                = text_field_tag "setting[bank_details_#{idx}][name]", bank_value["name"], :class => "form-control"
              .col-xs-12.col-sm-6.form-group
                = text_field_tag "setting[bank_details_#{idx}][number]",bank_value["number"], :class => "form-control"
            %a.addLink.remove_fields.dynamic.remove_bank_account_details{:href => "javascript:void(0)", :id => "remove_bank_account_details_#{idx}"}
