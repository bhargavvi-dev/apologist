    .row.row5.row-inline
      .col-xs-12.col-sm-8.col-lg-6.pt12
        %label.radioBox{:id => "commissoin_share_radio_#{office_user.id}", :class => "commission_reward_type_commission"}
          = ff.radio_button :commission_reward_type, 'COMMISSION_WISE'
          %span.lbl
            = t('user.office.reward_and_payment.partner.commission_chain_fee_adjustment')
      .col-xs-8.col-sm-2.col-lg-2
        = ff.text_field :chain_fee_share, :class => "virtualKeyboard addThousandSeparators form-control w85 mt10", :id => "chain_fee_share_#{office_user.id}", :value => addThousandSeparators(ff.object.chain_fee_share)
