#changePasswordModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-md{:role => "document"}
    .modal-content
      .modal-body
        .formField
          .row
            .col-xs-12
              = form_for('', url: update_old_password_path , :multipart => true, :remote => true, :html => {:class => "form-horizontal"}) do |f|
                %table.tableForm{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                  %tbody
                    %tr
                      %td#stepBtnModalHeight.leftCol{:width => "100%"}
                        .formBox
                          .row
                            #forgotPasswordNotice 
                            .col-xs-12
                              .form-group.formTitle.center
                                =t("general.change_password")
                            .col-sm-12
                              .form-group
                                = password_field_tag :old_password, '', :class => "form-control", :placeholder => t("change_password.current_password")
                              .form-group
                                = password_field_tag :new_password, '', :class => "form-control", :placeholder => t("change_password.new_password")
                              .form-group
                                = password_field_tag :password_confirmation, '', :class => "form-control", :placeholder => t("change_password.confirm_password")
                              .form-group
                                .col-xs-12.col-sm-6.col-lg-6
                                  .row
                                    %button.btn-lg.btn.btn-primary.btn-block
                                      =t("general.change_password")
                                .col-xs-12.col-sm-6.col-lg-6
                                  %button.btn-lg.btn.btn-primary.btn-blue.btn-block{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                                    %span
                                      =t('general.back')