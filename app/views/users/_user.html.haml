.col-xs-12.col-sm-6.col-md-4.col-10
  .rxBox
    .rxHeader
      .rxTitle
        = user.name
      .rxSubName
        = user.job_role      

      .rxLogo
        = image_tag user.avatar if user.avatar.attached?
    .rxContent
      .row.row5
        .col-xs-12
          .rxDesc
            %span
              = t('executive.email')
            .rxValue
              = user.email
        .col-xs-12
          .rxDesc
            %span
              = t('executive.phone_number')
            .rxValue
              = user.phone_number
        .col-xs-12.col-sm-6
          .rxDesc
            %span
              = t('executive.city')
            .rxValue
              = user.city
        .col-xs-12.col-sm-6
          .rxDesc
            %span
              = t('general.change')
            .rxValue
              / %a.rxIconText{:href => user_edit_password_path(executive.id) }
              /   = t('general.password')
    .rxBottom
      %a.rxNextBtn{:href => user_path(user) }
        = t("executive.open_card")
        %i.fa.fa-angle-double-right