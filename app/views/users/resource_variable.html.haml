.container
  .page-title
    %h1
      .title-logo
        = image_tag "logo.png", :class => "mr15", :width => "160"
      =t('executive.resource_and_variable')
  .row.row-10
    .col-xs-12.col-sm-10.col-sm-offset-1
      .row
        .col-xs-12.col-sm-4.col-md-4
          %a.toolBox{:href => office_register_users_path}
            .toolImage
              = image_tag "icon_new_agent.png"
            .toolTitle
              =t('executive.resource_and_variable_desktop.office_register').html_safe
        .col-xs-12.col-sm-4.col-md-4
          %a.toolBox{:href => user_register_users_path}
            .toolImage
              = image_tag "icon_new_agent.png"
            .toolTitle
              =t('executive.resource_and_variable_desktop.user_register').html_safe
        .col-xs-12.col-sm-4.col-md-4
          %a.toolBox{:href => product_pairs_users_path}
            .toolImage
              = image_tag "icon_business_model.png"
            .toolTitle
              =t('executive.resource_and_variable_desktop.product_and_service_register').html_safe
    .col-xs-12.col-sm-10.col-sm-offset-1
      .row
        .col-xs-12.col-sm-4.col-md-4
          %a.toolBox{:href => "javascript:void(0);"}
            .toolImage
              = image_tag "icon_document_description.png"
            .toolTitle
              =t('executive.resource_and_variable_desktop.office_document').html_safe
        .col-xs-12.col-sm-4.col-md-4
          %a.toolBox{:href => default_settings_path(:background_variables)}
            .toolImage
              = image_tag "icon_Transaction_Calculation.png"
            .toolTitle
              =t('executive.resource_and_variable_desktop.background_variables').html_safe
        .col-xs-12.col-sm-4.col-md-4
          %a.toolBox{:href => "javascript:void(0);"}
            .toolImage
              = image_tag "icon_Transaction_Calculation.png"
            .toolTitle
              =t('executive.resource_and_variable_desktop.alarm_limits').html_safe
    - if Rails.env.production?
      .col-xs-12.col-sm-4.col-md-4
        %a.toolBox{:href => "/translation_tool/locales/fi" }
          .toolImage
            = image_tag "icon_offer_statistics.png"
          .toolTitle
            = t("translation_tool.name").html_safe                  
